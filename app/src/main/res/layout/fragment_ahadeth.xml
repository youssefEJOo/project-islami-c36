<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentAhadeth">

    <ImageView
        android:id="@+id/logo_ahadeth"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/logoahadeth"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".27"
        android:adjustViewBounds="true"
        android:layout_marginTop="90dp"
        />
    <View
        android:id="@+id/line1_ahadeth"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/logo_ahadeth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/gold"
        android:layout_marginTop="4dp"
        />
    <TextView
        android:id="@+id/sura_name_tv_ahadeth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line1_ahadeth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:text="الأحاديث"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <View
        android:id="@+id/line2_ahadeth"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/sura_name_tv_ahadeth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/gold"
        android:layout_marginTop="4dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sura_Names_Recycler_View_ahadeth"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/line2_ahadeth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/item_sura_name_ahadeth"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentQuran">
    <ImageView
        android:id="@+id/logo_quran"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".27"
        android:src="@drawable/logoquran"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="50dp"
        android:adjustViewBounds="true"
        />
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/logo_quran"
        app:layout_constraintHeight_percent=".0"
        android:layout_marginTop="10dp"
        android:background="@color/gold"
        />
    <TextView
        android:id="@+id/sura_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_line"
        android:text="اسم السورة"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="25sp"
        android:textColor="#191818"
        android:textStyle="bold"
        />
    <View
        android:id="@+id/view_line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/sura_name_tv"
        app:layout_constraintHeight_percent=".0"
        android:layout_marginTop="10dp"
        android:background="@color/gold"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sura_Names_Recycler_View"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view_line2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/item_sura_name"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
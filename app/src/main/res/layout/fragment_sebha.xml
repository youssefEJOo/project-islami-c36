<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentSebha">

    <ImageView
        android:id="@+id/body_of_sebha"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/bodyofsebha"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent=".29"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="150dp"
        />
    <ImageView
        android:id="@+id/head_of_sebha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/headofseb7a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/body_of_sebha"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="97dp"
        android:adjustViewBounds="true"
        android:layout_marginStart="35dp"
        />
    <TextView
        android:id="@+id/names_of_tasbeh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/body_of_sebha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="عدد التسبيحات"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="41dp"
        />
    <Button
        android:id="@+id/count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent=".25"
        app:layout_constraintTop_toBottomOf="@id/names_of_tasbeh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="34dp"
        android:background="@drawable/round_of_button"
        android:theme="@style/Animation.Design.BottomSheetDialog"
        android:backgroundTint="#E3BA80"
        android:text="0"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/count_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent=".37"
        app:layout_constraintTop_toBottomOf="@id/count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="34dp"
        android:background="@drawable/round_of_button"
        android:theme="@style/Animation.Design.BottomSheetDialog"
        android:backgroundTint="#E3BA80"
        android:text="سبحان الله"
        android:textSize="25sp"
        android:textStyle="bold"
        android:padding="5dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>